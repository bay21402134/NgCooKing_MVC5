@model IEnumerable<NgCooking_Asp.net.Models.Recettes>


@{
    ViewBag.Title = "Home";
}

<div class="col-xs-12 col-sm-9">
    <div class="content" id="content_home">
        <h1 class="page-title">Bienvenue sur NgCooking !</h1>
        <section class="section">
            <h2 class="title">~ Meilleures recettes ~</h2>
            <div class="recettes row">

                @foreach( var item in Model.Take( 4 ) )

                {

                    <div class="col-xs-6 col-sm-3 recette">
                        <a href="Recettes/Details/@item.recettesId">
                            <img src="~/@item.picture" alt="Le tajine de ta maman">
                            <div class="top" title="note : 3,2/5">
                                <span class="note">
                                    @{
                                        int somme = 0;
                                        int indice = 0;
                                        foreach( var item1 in item.Comments )
                                        {
                                            somme += item1.mark;
                                            indice++;
                                        }

                                        if( indice > 0 )
                                        {
                                            for( int i = 1 ; i <= somme / indice ; i++ )
                                            {
                                                <span class="glyphicon glyphicon-heart"></span>
                                            }
                                        }
                                        else
                                        {

                                            for( int i = 1 ; i <= somme ; i++ )
                                            {
                                                <span class="glyphicon glyphicon-heart"></span>
                                            }

                                        }

                                    }


                                </span>
                            </div>
                            <div class="bot">
                                <p class="name">@item.recettesId</p>
                            </div>
                        </a>
                    </div>


                                        }



            </div>
        </section>
        <section class="section newrecette">
            <div class="row">
                <div class="col-xs-12">
                    <p class="c">Vous en avez sous la toque ?!</p>
                    <p class="b">
                        <a href="Recettes/Create" class="btn btn_color1"><span class="glyphicon glyphicon-plus-sign"></span><span>Créez une nouvelle recette</span></a>
                    </p>
                </div>
            </div>
        </section>
        <section class="section">
            <h2 class="title">~ Nouvelles recettes ~</h2>
            <div class="recettes row">

                @foreach( var item in Model.Reverse().Take( 4 ) )

                {
                    @*@Html.ActionLink( @ViewData["communaute"].ToString(), "Details/" + ViewData["Lien"].ToString(), "Communautes" )*@
                    <div class="col-xs-6 col-sm-3 recette">
                        <a href="Recettes/Details/@item.recettesId">
                            <img src="~/@item.picture" alt="Le tajine de ta maman">
                            <div class="top" title="note : 3,2/5">
                                <span class="note">
                                    @{
                                        int somme = 0;
                                        int indice = 0;
                                        foreach( var item1 in item.Comments )
                                        {
                                            somme += item1.mark;
                                            indice++;
                                        }

                                        if( indice > 0 )
                                        {
                                            for( int i = 1 ; i <= somme / indice ; i++ )
                                            {
                                                <span class="glyphicon glyphicon-heart"></span>
                                            }
                                        }
                                        else
                                        {

                                            for( int i = 1 ; i <= somme ; i++ )
                                            {
                                                <span class="glyphicon glyphicon-heart"></span>
                                            }

                                        }

                                    }

                                </span>
                            </div>
                            <div class="bot">
                                <p class="name">@item.recettesId</p>
                            </div>
                        </a>
                    </div>
                                        }
            </div>
        </section>
